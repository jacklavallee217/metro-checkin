doctype html
html
  head
    link(rel='stylesheet', href='/stylesheets/main.css')
    link(rel='stylesheet', href='/stylesheets/index.css')
    link(rel='stylesheet', href='/stylesheets/customer_profile.css')
    link(href='https://fonts.googleapis.com/css?family=Raleway&display=swap', rel='stylesheet')
    script(src='/javascripts/jquery.js', type='module' defer)
    script(src='/javascripts/app.js', type='module' defer)
    title Customer Search
  body 
    #search
        h1 Online Waivers
        #searchResults: each waiver, i in waivers
            .waiver
                .cust_prof
                    h2 #{waiver.customerInfo.firstName} #{waiver.customerInfo.lastName}
                    h3 Age: #{waiver.customerInfo.age}
                    h3 Membership: #{waiver.customerInfo.membership}
                    h3 Privilege: #{waiver.customerInfo.privilege}
                .cust_image
                    img#img(src='')
                #formDiv
                    form(action='/waiverQueue/addWaiver' + waiver._id method='post')
                        input(type='submit' value='Add')
                    form(action='/waiverQueue/deleteWaiver' + waiver._id method='post')
                        input(type='submit' value='Delete')
        a(href='/')
            button.returnButton Return to Search Screen
